<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h3 class="typed-js" data-controller="typed-js"><strong>Posted Offers</strong></h3>
  </div>
</div>

<div class="container">
  <% @offers.each do |offer| %>
    <div class="card" id="list1" onmouseenter="showButton('list1')" onmouseleave="hideButton('list1')">
      <% if offer.listing.photo.key? %>
        <%= cl_image_tag(offer.photo.key, class: "card__img")%>
      <% else %>
        <img src="https://picsum.photos/500/300/?building" alt="" class="card__img">
      <% end %>
      <div class="card__body">
        <h3 class="card__title"></i><%= offer.listing.item_name %></h3>
        <div class="card__desc">
          <span class="card__desc__room"></i><u>Description:</u> <%= offer.listing.item_description %></span><br>
          <span class="card__desc__room"> <span class="card__desc__price--small"></span><u>Asking Price:</u> $<%= offer.listing.price %></span><br>
          <span class="card__desc__room"> <span class="card__desc__price--small"></span><u>My Offer Price:</u> $<%= offer.offer_price %></span><br>
        </div>
      </div>
      <%= link_to "View", listing_path(offer.listing), class: "btn btn-success stretched-link" %>
    </div>
  <% end %>
</div>
