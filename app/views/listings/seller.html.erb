
<h2 class="text-center pt-5">All my listings</h2>

<div class="container">
  <% @listing.each do |element| %>
    <div class="card" id="list1" onmouseenter="showButton('list1')" onmouseleave="hideButton('list1')">
      <% if element.photo.key? %>
        <%= cl_image_tag(element.photo.key, class: "card__img")%>
      <% else %>
        <img src="https://picsum.photos/500/300/?building" alt="" class="card__img">
      <% end %>
      <div class="card__body">
        <h3 class="card__title"></i><%= element.item_name %></h3>
        <div class="card__desc">
          <span class="card__desc__room"></i>
          <% if element.offers.any? %>
            Incoming Offers: <%= element.offers.size %><br>
            <%= link_to "View Offers", listing_offers_path(element) %>
          <% else %>
            Incoming Offers: 0
          <% end %>
          </span>
          <span class="card__desc__price"><span class="card__desc__price--small"></span>$<%= element.price %></span><br>
        </div>
        <%= link_to "View Listing", listing_path(element.id), class: "btn btn-red mt-3" %><br>
      </div>
    </div>
  <% end %>
</div>
