<div class="navbar navbar-expand-sm navbar-light navbar-lewagon px-3">
  <%= link_to root_path do %>
    <%= image_tag "carousell-logo.png", alt: "alttext", class: "logo" %>
  <% end %>
  <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav me-auto">
      <% if user_signed_in? %>
        <li class="nav-item active mx-2">
          <%= link_to "My Listings", seller_listing_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item active mx-2">
          <%= link_to "Logout", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item nav-link" %>
        </li>
      <% else %>
        <li>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
      <li class="nav-item active mx-2">
        <%= image_tag "avatar.png", alt: "avatar", class: "avatar" %>
      </li>
      <li class="btn btn-sell btn-sm mx-2">
        <%= link_to "Sell", new_listing_path, class: "nav-link" %>
      </li>
    </ul>
  </div>
</div>
